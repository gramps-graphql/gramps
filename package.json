{
  "name": "gramps",
  "private": true,
  "workspaces": [
    "packages/*",
    "example/*"
  ],
  "scripts": {
    "lint": "eslint packages/**/{src,test}/**/*.js",
    "test": "jest",
    "prebuild": "del-cli packages/**/dist",
    "build": "lerna run build",
    "example:server:start": "yarn workspace example-server start",
    "example:ds:start": "yarn workspace example-data-source start",
    "example:ds:start:mock": "yarn workspace example-data-source start:mock",
    "example:ds:start:gateway": "yarn workspace example-data-source start:gateway",
    "example:ds:start:gateway:mock": "yarn workspace example-data-source start:gateway:mock"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.3.4",
    "@babel/plugin-proposal-class-properties": "^7.4.4",
    "@babel/preset-env": "^7.3.4",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^24.5.0",
    "babel-plugin-inline-import": "^3.0.0",
    "cross-env": "^5.2.0",
    "del-cli": "^2.0.0",
    "eslint": "^5.15.3",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-config-prettier": "^4.1.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-prettier": "^3.0.1",
    "jest": "^24.5.0",
    "lerna": "^3.16.4",
    "prettier": "^1.16.4"
  }
}
